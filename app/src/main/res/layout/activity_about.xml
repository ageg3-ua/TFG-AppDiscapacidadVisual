<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_accessible"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="100dp"
        android:paddingBottom="60dp"> <!-- 👈 Le da espacio al final -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leo+ v1.0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© 2025 Ángel Gamayo Escolano\nProyecto de Fin de Grado\n (Ingeniería Informática)\nUniversidad de Alicante\n\nIconos por Google Material Icons\nOCR y TTS por Google MLKit y Android TTS\n\nApp desarrollada en Android Studio (Kotlin)"
        android:textSize="18sp"
        android:lineSpacingExtra="8dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="64dp" /> <!-- 👈 Baja el botón -->

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/purple_700"
        android:elevation="6dp"
        android:background="@drawable/button_back_border"
        android:stateListAnimator="@null"/>
</LinearLayout>
    </ScrollView>
